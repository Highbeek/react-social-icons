{
    "compilerOptions": {
        "module": "ES2015",
        "target": "ES6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "noEmit": true,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": ["es6", "dom"],
        "jsx": "react-jsx",
        "rootDir": "."
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
